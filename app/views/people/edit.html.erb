<% @page_title = "Edit #{@person}" %>

<h1>Edit <%= link_to @person, @person %></h1>

<%= error_messages_for :person %>

<% form_for(@person, :builder => ApplicationFormBuilder) do |f| %>

<%= f.property_line :text_field, :display_name, :required => true %>
<%= f.property_line :text_field, :email, :required => true %>
<%= f.property_line :password_field, :password, :description => "at least 8 characters (leave blank unless changing)" %>
<%= f.property_line :password_field, :password_confirmation, :description => "must match password" %>

<div class="buttons">
    <%= f.styled_submit "Update", :style => "width:6em;" %>
    <%= styled_button_to_back "Cancel", :style => "width:6em;" %>
</div>

<% end %>
