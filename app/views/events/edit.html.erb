<h1>Editing event</h1>

<%= error_messages_for :event %>

<% form_for(@event) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <b>Details</b><br />
    <%= f.text_area :details %>
  </p>

  <p>
    <b>Start-date</b><br />
    <%= f.datetime_select :start_date %>
  </p>

  <p>
    <b>End-date</b><br />
    <%= f.datetime_select :end_date %>
  </p>

  <p>
    <b>Tags</b><br />
    <%= f.text_field :tags %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
